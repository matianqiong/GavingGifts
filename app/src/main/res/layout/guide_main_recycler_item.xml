<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/guide_main_recyclerItemImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/guide_main_recyclerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="bottom"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/guide_main_recyclerItemLike"
        android:layout_width="40dp"
        android:layout_height="55dp"
        android:background="@color/colorClearNormal"
        android:paddingTop="5dp"
        android:gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:button="@null"
        android:drawableTop="@drawable/like_selector"
        android:textColor="@color/colorWhite"
        android:text="0"/>


</FrameLayout>