<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/guide_details_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/guide_details_back"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_keyboard_backspace_white_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorWhite"
            android:text="攻略详情"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_marginTop="23dp"/>
    </RelativeLayout>
    <WebView
        android:layout_below="@id/guide_details_top"
        android:id="@+id/guide_details_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">
    </WebView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">
        <CheckBox
            android:id="@+id/guide_details_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_marginLeft="50dp"
            android:drawableLeft="@drawable/like_selector"
            android:text="0"
            android:textColor="@color/colorNormal"
            android:layout_weight="1"/>
        <CheckBox
            android:id="@+id/guide_details_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableLeft="@mipmap/ic_action_compact_share"
            android:text="0"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorWhite"
            android:textColor="@color/colorNormal"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"/>
        <CheckBox
            android:id="@+id/guide_details_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableLeft="@drawable/like_selector"
            android:text="0"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorWhite"
            android:textColor="@color/colorNormal"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>