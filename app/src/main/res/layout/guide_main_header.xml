<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
  <android.support.v4.view.ViewPager
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:id="@+id/vp_banner">
  </android.support.v4.view.ViewPager>
    <RadioGroup
        android:id="@+id/point_group"
        android:layout_alignBottom="@+id/vp_banner"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:drawableTop="@drawable/point_selector"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:drawableTop="@drawable/point_selector"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:drawableTop="@drawable/point_selector"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:drawableTop="@drawable/point_selector"/>
    </RadioGroup>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/hs_scrollview"
        android:layout_below="@id/vp_banner"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/guide_img1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/guide_img2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/guide_img3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/guide_img4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/guide_img5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/guide_img6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/guide_img7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>